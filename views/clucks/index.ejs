<%-include ('../partials/header')%>
<main class = 'container'>
    <%for(let cluck of clucks){%>
    <div class="d-flex flex-row bd-highlight">
        <div class ="container">
            <div class="card d-flex flex-row mt-4 mb-4">
                <div class="card-title">
                   
                        <img class="img-thumbnail"src ="https://thumbs.dreamstime.com/b/chicken-hat-cartoon-little-yellow-red-bow-38158332.jpg"
                        alt="chicken avatar" width="40px" height="40px">
                    
                        <h6><%=cluck.username%>  @ <%= new Date(cluck.created_at).toLocaleString() %>ago</h6>
                </div>
                    <div class="card-body d-flex justify-content-center" >
                        <p class="card-body" > <%=cluck.content%> </p>
                        <img class="img-fluid"src="<%=cluck.image_url%>" width="100px" height="100px">
                    </div>
            </div>
        </div>
    </div>
<%}%>
</main>
<%-include ('../partials/footer')%>